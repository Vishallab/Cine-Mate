<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CineMate" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Navigation app bar color -->
        <item name="colorPrimary">#CEFFFFFF</item>

        <!-- Top notification bar color -->
        <item name="colorPrimaryVariant">#02678F</item>

        <!-- Color for elements on the primary color -->
        <item name="colorOnPrimary">#3AB1B1</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">#FFD896</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Text color throughout the app -->
        <item name="android:textColor">#000000</item>

        <!-- Background color of the entire app -->
        <item name="android:colorBackground">#FFFFFF</item>
    </style>

    <style name="ToolbarColor">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>
</resources>
