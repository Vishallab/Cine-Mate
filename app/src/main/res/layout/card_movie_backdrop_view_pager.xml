<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<!--    ye card view h jo ki main menu me top  tremnding me show hoga or view pager k through slide hota rhega -->


    <ImageView
        android:id="@+id/movie_imageView_backdrop_viewPager"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="@color/surface"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie_textView_title_viewPager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_caption"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:text="@string/text_title"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/onSurface"
        app:layout_constraintBottom_toBottomOf="@+id/movie_imageView_backdrop_viewPager"
        app:layout_constraintEnd_toEndOf="@+id/movie_imageView_backdrop_viewPager"
        app:layout_constraintStart_toStartOf="@+id/movie_imageView_backdrop_viewPager" />

</androidx.constraintlayout.widget.ConstraintLayout>