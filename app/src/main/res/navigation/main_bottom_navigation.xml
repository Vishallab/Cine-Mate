<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_bottom_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/nowPlayingFragment"
        android:name="com.vishal.cinemate.fragments.NowPlayingFragment"

        android:label="@string/text_nowPlaying"
        tools:layout="@layout/fragment_now_playing">
        <action
            android:id="@+id/action_nowPlayingFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/upcomingFragment"
        android:name="com.vishal.cinemate.fragments.UpcomingFragment"
        android:label="@string/text_upcoming"
        tools:layout="@layout/fragment_upcoming" >
        <action
            android:id="@+id/action_upcomingFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.vishal.cinemate.fragments.MovieDetailFragment"
        android:label="@string/text_movieDetail"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movieId"
            android:defaultValue="null"
            app:argType="string" />
        <action
            android:id="@+id/action_movieDetailFragment_to_similarActivity"
            app:destination="@id/similarActivity" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vishal.cinemate.fragments.HomeFragment"
        android:label="@string/text_home"
        tools:layout="@layout/fragment_home" >
<!--        action in popular adapter to on click destination moviw fragent-->
        <action

            android:id="@+id/action_homeFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />


    </fragment>
    <activity
        android:id="@+id/similarActivity"
        android:name="com.vishal.cinemate.activities.similarActivity"
        android:label="activity_similar"
        tools:layout="@layout/activity_similar" />

</navigation>